{% extends 'base.html' %}

{% block header %}
  <h1>{% block title %}Authors{% endblock %}</h1>
{% endblock %}

{% block content %}
  {% for author in authors %}
  <article class="post">
    <header>
      <h1>{{author.username}}</h1>
    </header>
    <ul>
    {% for post in author.posts %}
      <li> <a href="{{url_for('blog.read', post_id = post.id)}}">{{post.title}}</a></li>
    {% endfor %}
    </ul>
  </article>
    {% if not loop.last %}
    <hr>
    {% endif %}
  {% endfor %}
{% endblock %}